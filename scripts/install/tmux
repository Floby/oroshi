#!/usr/bin/env bash

echo "Download source"
cd ~/local/src/
wget -c http://downloads.sourceforge.net/project/tmux/tmux/tmux-1.7/tmux-1.7.tar.gz

echo "Extracting"
tar xvzf tmux-1.7.tar.gz
cd tmux-1.7

echo "Installing dependencies"
sudo apt-get install libevent-dev

echo "Configuring"
mkdir -p ~/local/etc/tmux
./configure --prefix=/usr/local/etc/tmux

echo "Compiling"
make
make install

echo "Symlinking"
cd ~/local/bin
ln -s ../etc/tmux/bin/tmux .
sudo ln -s ~/local/etc/tmux/share/man/man1/tmux.1 ~/local/share/man/man1/tmux.1


