#!/usr/bin/env bash

echo "Creating ~/local"
mkdir -p ~/local
mkdir -p ~/local/mnt
mkdir -p ~/local/tmp

echo "Symlinking dirs from /usr/local to ~/local"
for usr_dir in /usr/local/*/; do
  local_dir=~/local/`basename $usr_dir`

  sudo mv -u $usr_dir $local_dir
  sudo chown -R $USER:$USER $local_dir
  sudo ln -s $local_dir $usr_dir
done
