#!/usr/bin/env ruby
# encoding : utf-8
galaxy_sd = File.join('/', 'media', 'galaxy')
galaxy_internal = File.join('/', 'media', 'F101-14E2')
galaxy_dcim = File.join(galaxy_internal, 'DCIM')
galaxy_books = File.join(galaxy_sd, 'books')
galaxy_rp_books = File.join(galaxy_sd, 'roleplay', 'books')
galaxy_rp_characters = File.join(galaxy_sd, 'roleplay', 'characters')
galaxy_rp_scenarios = File.join(galaxy_sd, 'roleplay', 'scenarios')

eddie_books = File.join('~', 'Documents', 'books')

# Will extract images taken with the phone camera to the latpop
puts "# Extracting pictures"
%x[camera-extract #{galaxy_dcim}]

# Will update the book collection
puts "# Updating book list"
%x[ebook-sync #{eddie_books} #{galaxy_books}]

# Update roleplay repositories
puts "# Updating roleplay books repo"
%x[git pull #{galaxy_rp_books}]
puts "# Updating roleplay characters repo"
%x[git pull #{galaxy_rp_characters}]
puts "# Updating roleplay scenarios repo"
%x[git pull #{galaxy_rp_scenarios}]

