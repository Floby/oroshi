#!/usr/bin/env ruby
# encoding : utf-8
# Update notes repositories
galaxy_sd = File.join('/', 'media', 'galaxy')
galaxy_notes = File.join(galaxy_sd, 'notes')
galaxy_notes_jokes = File.join(galaxy_notes, 'jokes')
galaxy_notes_games = File.join(galaxy_notes, 'games')

eddie_notes = File.join('~', 'Documents', 'notes')
eddie_notes_jokes = File.join(eddie_notes, 'jokes')
eddie_notes_games = File.join(eddie_notes, 'games')

puts "# Updating jokes"
puts %x[update-dir #{eddie_notes_jokes} #{galaxy_notes_jokes}]
puts "# Updating games"
puts %x[update-dir #{eddie_notes_games} #{galaxy_notes_games}]
