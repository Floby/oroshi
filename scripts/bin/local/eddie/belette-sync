#!/usr/bin/env ruby
# encoding : utf-8
belette_sd = File.join('media', 'BELETTE')
belette_books = File.join(belette_sd, 'Books')
belette_rp_books = File.join(belette_sd, 'Roleplay', 'books')
belette_rp_characters = File.join(belette_sd, 'Roleplay', 'characters')
belette_rp_scenarios = File.join(belette_sd, 'Roleplay', 'scenarios')

eddie_books = File.join('~', 'Documents', 'books')

# Will update the book collection
puts "# Updating book list"
%x[ebook-sync #{eddie_books} #{belette_books}]

# Update roleplay repositories
puts "# Updating roleplay books repo"
%x[git pull #{belette_rp_books}]
puts "# Updating roleplay characters repo"
%x[git pull #{belette_rp_characters}]
puts "# Updating roleplay scenarios repo"
%x[git pull #{belette_rp_scenarios}]

