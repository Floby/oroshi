#!/usr/bin/env ruby
require_relative '../etc/git-helper/git-helper'
# Display the list of current local tags
# Usage :
# $ git-tag-list
# v1.1.2  9242a33  Version 1.1.2
# v1.1.3  7548e9a  Version 1.1.3
# v1.1.4  87967bb  Version 1.1.4

Tag = Struct.new(:tag, :hash, :message)
class TagList
  include GitHelper
  # Note:
  # Git provides two commands to get the list of tags.
  # One will give us the list of tags, with commit hashes
  # The other one will give us the list of tags, with commit message
  # We'll have to reconciliate both before displaying them

  def tag_list
    hashes = tags_with_hashes
    messages = tags_with_messages
    list = []
    messages.each do |tag, message|
      list << Tag.new(tag, hashes[tag], message)
    end
    return list
  end

  def tags_with_messages
    output = %x[git tag -n | sort -V]
    tags = {}
    output.each_line do |line|
      tag, message = line.match(/(^[^ ]*)\s*(.*)$/).captures
      tags[tag] = message
    end
    return tags
  end

  def tags_with_hashes
    output = %x[git show-ref --tags]
    tags = {}
    output.each_line do |line|
      hash, tag = line.match(/^(.{7})[^ ]* refs\/tags\/(.*)$/).captures
      tags[tag] = hash
    end
    return tags
  end

  def run
    @tag_list = tag_list

    longest_tag = @tag_list.map {|obj| obj[:tag] }.group_by(&:size).max.last[0]

    @tag_list.each do |tag|
      tag_name = colorize(tag[:tag].ljust(longest_tag.size), color(:tag))
      hash = colorize(tag[:hash], color(:hash))
      message = colorize(tag[:message], color(:message))
      puts "#{tag_name}  #{hash}  #{message}"
    end
  end
end
TagList.new().run()
