#!/usr/bin/env ruby

# Listen for changes in file and run a command
class WatchAndReload
  def initialize(*args)
    @command = args.pop
    @files = args
  end

  def run
    command = [
      'when-changed',
      @files.join(' '),
      "-c \"clear && #{@command}\""
    ]
    exec command.join(' ')
  end
end
WatchAndReload.new(*ARGV).run
