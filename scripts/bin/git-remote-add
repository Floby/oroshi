#!/usr/bin/env zsh
# Adds a new remote, and auto-track its branches
# $ git-remote-add remoteName remoteUrl

local remoteName=$1
local remoteUrl=$2

if git remote add $remoteName $remoteUrl &>/dev/null; then
  echo "✔ Added remote $remoteName";
else
  exit 1
fi

if git fetch -q $remoteName; then
  echo "✔ Fetched branches"
else
  exit 1
fi
