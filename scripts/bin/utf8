#!/usr/bin/env ruby
# Encoding : UTF-8
require "shellwords"

class Latin2UTF8
	
	def initialize(*args)
		@files = args.map do |file|
			File.expand_path(file)
		end
	end

	def get_encoding(file)
		output = %x[file -bi #{file.shellescape}]
		matches = output.match(/(.*)charset=(.*)/)
		return nil unless matches
		return matches[2].downcase
	end
	
	def run
		@files.each do |file|
			encoding = get_encoding(file)
			case encoding
			when "iso-8859-1"
				%x[recode latin2..utf8 #{file.shellescape}]
			when "utf-8"
				puts "#{File.basename(file)} is already in utf-8"
			else
				puts "Unknown encoding for #{File.basename(file)}"
			end
		end
	end
end
Latin2UTF8.new(*ARGV).run()

