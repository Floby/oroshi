#!/usr/bin/env ruby
# Will add a new submodule to a repo.
# Usage :
# $ git-submodule-path url@to:repo.git

class SubmoduleCreate
  def initialize(*args)
    if args.size == 0
      puts "âœ˜ You must pass at least the repository url"
      exit 1
    end
    @repoUrl = args[0]
  end

  def run
    system("git submodule add #{@repoUrl}")
  end

end
SubmoduleCreate.new(*ARGV).run()

