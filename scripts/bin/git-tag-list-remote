#!/usr/bin/env ruby
require_relative '../etc/git-helper/git-helper'
# Display the list of current remote tags
# Usage :
# $ git-tag-list-remote {remote}
# v1.1.2  9242a33 
# v1.1.3  7548e9a
# v1.1.4  87967bb

Tag = Struct.new(:tag, :hash)
class TagListRemote
  include GitHelper

  def initialize(*args)
    @args = get_real_args(args)
    elements = guess_elements(@args)
    @remoteName = elements[:remote]
  end

  def tag_list
    output = %x[git ls-remote --tags #{@remoteName} 2>/dev/null | grep -v '\\^{}$' | awk '{print $2, $1}' | sort -V]
    tags = []
    output.each_line do |line|
      tag, hash = line.match(/^refs\/tags\/(.*) (.{7}).*\n$/).captures
      tags << Tag.new(tag, hash)
    end
    return tags
  end

  def run
    @tag_list = tag_list

    longest_tag = @tag_list.map {|obj| obj[:tag] }.group_by(&:size).max.last[0]

    @tag_list.each do |tag|
      tag_name = colorize(tag[:tag].ljust(longest_tag.size), color(:tag))
      hash = colorize(tag[:hash], color(:hash))
      puts "#{tag_name}  #{hash}"
    end
  end

end
TagListRemote.new(*ARGV).run()
