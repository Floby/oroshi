#compdef chromium-browser html2txt
# - Will only suggest webpage files

_fts-webpage () {
	# local var definition to not pollute global scope
	local curcontext=$curcontext state line context
	typeset -A opt_args

	# suggesting arguments
	_arguments \
		"*:binary img file:->webpage_file" \
		&& return 0

	# state machine match
	case $state in
		(webpage_file)
			_files -g '*.(htm|html)' \
			&& return 0
	esac

	return 1
}

_fts-webpage "$@"
