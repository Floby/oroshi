#compdef evince
typeset -A opt_args
local state context line

# - Will suggest only pdf files

# List of args, description and hints
_arguments -s -S \
	"*:pdf file:->pdf_file" \
	&& return 0

# State machine
case $state in
	# Suggesting a pdf file.
	(pdf_file)
		_files -g '*.pdf' && return 0
		;;
esac

return 1
