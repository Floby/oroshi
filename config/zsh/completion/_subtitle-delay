#compdef subtitle-delay
# Should only suggest .srt files

_subtitle-delay () {
	# local var definition to not pollute global scope
	local curcontext=$curcontext state line context
	typeset -A opt_args

	# suggesting arguments
	_arguments \
		"1:srt file:->srt_file" \
		&& return 0

	# state machine match
	case $state in
		(srt_file)
			_files -g '*.srt' \
			&& return 0
	esac

	return 1
}

_subtitle-delay "$@"
