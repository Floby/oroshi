#compdef convert-vcd
typeset -A opt_args
local state context line

# - Will only suggest .bin files

# List of args, description and hints
_arguments -s -S \
	"*:bin file:->bin_file" \
	&& return 0

# State machine
case $state in
	# Suggesting the .bin file to use as source
	(bin_file)
		_files -g '*.bin' && return 0
		;;
esac

return 1
