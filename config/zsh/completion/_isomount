#compdef isomount
typeset -A opt_args
local state context line

# - Will suggest only iso files

# List of args, description and hints
_arguments -s -S \
	"*:iso file:->iso_file" \
	&& return 0

# State machine
case $state in
	# Suggesting a iso file.
	(iso_file)
		_files -g '*.iso' && return 0
		;;
esac

return 1
