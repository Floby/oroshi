#compdef subtitle-delay
# - Will only suggest .srt files

_ft-srt () {
	# local var definition to not pollute global scope
	local curcontext=$curcontext state line context
	typeset -A opt_args

	# suggesting arguments
	_arguments \
		"*:srt file:->srt_file" \
		&& return 0

	# state machine match
	case $state in
		(srt_file)
			_files -g '*.srt' \
			&& return 0
	esac

	return 1
}

_ft-srt "$@"
