#compdef chromium-browser
# Chromium browser should only suggest HTML files

_chrome () {
	# local var definition to not pollute global scope
	local curcontext=$curcontext state line context
	typeset -A opt_args

	# suggesting arguments
	_arguments \
		"*:webpage file:->webpage" \
		&& return 0

	# state machine match
	case $state in
		(webpage)
			_files -g '*.(htm|html)' \
			&& return 0
	esac

	return 1
}

_chrome "$@"
