#compdef html2txt
typeset -A opt_args
local state context line

# - Will only suggest html files

# List of args, description and hints
_arguments -s -S \
	"*:html source file:->html_source_file" \
	&& return 0

# State machine
case $state in
	# Suggesting an html file.
	(html_source_file)
		_files -g '*.(html|htm)' && return 0
	;;
esac

return 1
