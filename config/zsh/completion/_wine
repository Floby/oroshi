#compdef wine
typeset -A opt_args
local state context line

# - Will only suggest .exe files

# List of args, description and hints
_arguments -s -S \
	"*:Windows executable programme:->exe_file" \
	&& return 0


# State machine
case $state in
	# Suggesting an exe file.
	(exe_file)
		_files -g '*.(exe|EXE)' && return 0
	;;
esac

return 1
