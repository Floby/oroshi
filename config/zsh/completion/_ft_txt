#compdef txt2epub
# - Will only suggest .txt files

_ft-txt () {
	# local var definition to not pollute global scope
	local curcontext=$curcontext state line context
	typeset -A opt_args

	# suggesting arguments
	_arguments \
		"*:txt file:->txt_file" \
		&& return 0

	# state machine match
	case $state in
		(txt_file)
			_files -g '*.txt' \
			&& return 0
	esac

	return 1
}

_ft-txt "$@"
