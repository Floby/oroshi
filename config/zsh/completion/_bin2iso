#compdef bin2iso
typeset -A opt_args
local state context line

# - Will suggest only bin files

# List of args, description and hints
_arguments -s -S \
	"*:bin file:->bin_file" \
	&& return 0

# State machine
case $state in
	# Suggesting a bin file.
	(bin_file)
		_files -g '*.(bin|raw|img)' && return 0
		;;
esac

return 1
