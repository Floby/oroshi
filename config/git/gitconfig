[user]
  name = Pixelastic
  email = tim@pixelastic.com
[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[color]
  ui = true
[color "diff"]
  meta = 136
  frag = 141
  func = 250 bold
  plain = 252
  new = 35 
  old = 160
  whitespace = 88 88
  commit = 67
[alias]
  amend = commit --amend -v
  branch-list = !git-branch-list
  commit-all = !git add --all . && git commit -v --all
  conflicts = diff --name-only --diff-filter=U
  current-branch = !git rev-parse --abbrev-ref HEAD 2>/dev/null
  current-tag = !git describe --tags --abbrev=0 2>/dev/null
  diff-staged = diff -w --color-words --staged
  download = clone --depth=1
  fetch-all-locally = !git-fetch-all-locally
  fix-conflicts = !git-fix-conflicts
  fix-jshint = !git-fix-jshint
  import-branch = !git-import-branch
  is-submodule = !git-is-submodule
  peek = log --graph --pretty=format:'%C(67)%h%Creset %C(24)(%cd, %ar)%Creset %C(241)%an%Creset %C(bold 202)%d%Creset%n   %C(250)%s%Creset%n'
  prev = reset --hard HEAD~1
  push-origin = !git-push-origin
  resurrect = !git-resurrect
  revert = checkout
  rollback = reset --soft HEAD^
  root = !pwd
  status-short = status --short
  submodule-update = !git submodule update
  submodule-download =!git submodule init && git submodule update
  tabula-rasa = !git reset --hard && git clean -fd
  tag-list = !git tag -n1 -l | sort -V
  unstage = reset HEAD
[advice]
  ; statusHints = false
[push]
  default = simple
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[diff]
  ; wordRegex = "[a-zA-Z]{5,}"

