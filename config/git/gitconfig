[alias]
  amend = commit --amend -v
  commit-all = !git add --all . && git commit -v --all
  conflicts = diff --name-only --diff-filter=U
  diff-staged = diff -w --color-words --staged
  download = clone --depth=1
  peek = log --graph --pretty=format:'%C(67)%h%Creset %C(24)(%cd, %ar)%Creset %C(241)%an%Creset %C(bold 202)%d%Creset%n   %C(250)%s%Creset%n'
  root = !pwd
  submodule-update = !git submodule update
  submodule-download =!git submodule init && git submodule update
  tabula-rasa = !git reset --hard && git clean -fd
  unstage = reset HEAD
[advice]
  ; statusHints = false
[color]
  ui = true
[color "diff"]
  commit = 67
  frag = 136
  func = 235
  meta = 141
  new = 35 
  old = 160
  plain = 252
  whitespace = 88 88
[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
[diff]
  ; wordRegex = "[a-zA-Z]{5,}"
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[push]
  default = simple
[remote "origin"]
	prune = true ; Stop tracking local branch deleted on remote
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[user]
  name = Pixelastic
  email = tim@pixelastic.com
