[user]
	name = Pixelastic
	email = tim@pixelastic.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[color]
	ui = true
[color "diff"]
	meta = 136
	frag = 141
	func = 250 bold
	plain = 252
	new = 35 
	old = 160
	whitespace = 88 88
	commit = 67
[alias]
	amend = commit --amend
	branch-list = !git-branch-list
	commit-all = !git add --all . && git commit -v --all
	current-branch = !git rev-parse --abbrev-ref HEAD 2>/dev/null
	current-tag = !git describe --tags --abbrev=0 2>/dev/null
	diff-last = diff -w HEAD^
	diff-staged = diff -w --staged
	download = clone --depth=1
	is-submodule = !git-is-submodule
	peek = log --graph --pretty=format:'%C(67)%h%Creset %C(24)(%ar)%Creset %C(241)%an%Creset %C(bold 202)%d%Creset%n   %C(250)%s%Creset%n'
	prev = reset --hard HEAD~1
	resurrect = !git-resurrect
	revert = checkout
	rollback = reset --soft HEAD^
	root = !pwd
	status-short = status --short
	submodule-download =!git submodule init && git submodule update
	tag-list = tag -n1 -l
	unstage = reset HEAD
 	tabula-rasa = !git reset --hard && git clean -fd
[advice]
  ; statusHints = false
[push]
	default = simple
