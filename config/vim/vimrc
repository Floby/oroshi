" FILETYPES {{{
" Load skeletons
augroup skeletons
	au!
	au BufNewFile * :silent! exec ":0r ~/.vim/includes/skeletons/skeleton.".expand('%:e')
augroup END

" ,ve to edit vimrc
nnoremap <leader>ve :tabe ~/.oroshi/config/vim/vimrc<CR>
" ,vr to reload vimrc
nnoremap <leader>vr :source ~/.vimrc<CR>:let &filetype=&filetype<CR>:loadview<CR>:nohlsearch<CR>

" man to open the manpage of a command in a new tab
nnoremap <silent> man :tabe<CR>:setlocal filetype=man<CR>:.!man<Space>
" }}}


" Rsync kiss front-end stuff to tomcat server
augroup ft_kiss
	let kissihmapp="/var/www/java/kissihm/kissihm/src/main/webapp/resources/app/*" 
	let kissihmwebapp="/var/lib/tomcat7/webapps/kiss/resources/app/"
	au BufWritePost /var/www/java/kissihm/kissihm/src/main/webapp/resources/app/* execute ':silent !rsync -ra --delete '.kissihmapp.' '.kissihmwebapp
augroup END
